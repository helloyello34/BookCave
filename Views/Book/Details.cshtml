@model BookCave.Models.ViewModels.BookDetailsViewModel

<style>
.img-bookdetail {
    width: 160px;
    height: 240px;
}

p {
  font-weight: 800;
}

p > span {
  font-weight: 200;
}
</style>

<div class="container">
    <div class="row">
      <div class="col-sm-2">
        <img class="img-bookdetail" src="@Model.Image" alt="alternitive">
      </div>
      <div class="col-sm-10">
        <table class="table">
          <tr>
            <th valign="top">Book Title:</th>
            <td>@Model.Title</td>
          </tr>
          <tr>
            <th valign="top">Author:</th>
            <td>@Model.Author</td>
          </tr>
          <tr>
            <th valign="top">Year published:</th>
            <td>@Model.ReleaseYear</td>
          </tr>
          <tr>
            <th valign="top">Rating:</th>
            <td>@Model.Rating</td>
          </tr>
          <tr>
            <th valign="top">Book Information:</th>
            <td>@Model.Info</td>
          </tr>
        </table>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-10"></div>
      <div class="col-sm-2">
        <span id="price-tag">Price : <span>@Model.Price</span> </span>  
        <a id="buy" class="btn btn-primary">Buy!</a>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-2"></div>
      <div class="col-sm-10"> 
        <h3>More details</h3> 
        <table class="table">
          <tbody>
            <tr>
              <th>Format:</th>
              <td>@Model.Format</td> 
            </tr>
            <tr>
              <th>Publisher:</th>
              <td>@Model.Publisher</td> 
            </tr>
            <tr>
              <th>Language:</th>
              <td>@Model.Language</td> 
            </tr>
            <tr>
              <th>ISBN: </th>
              <td>@Model.ISBN</td> 
            </tr>
            <tr>
              <th>Genre:</th>
              <td>@Model.Genre</td> 
            </tr>
          </tbody>
        </table> 
      </div>
    </div>
</div>