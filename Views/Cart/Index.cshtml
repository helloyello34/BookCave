@model BookCave.Models.ViewModels.CartViewModel


<div class="container-fluid cart-title-container">
    <div class="row">
        <div class="col col-lg-12" style="border:solid;">
            <h2>@ViewData["Title"]</h2>
        </div>
    </div>
</div>
<br>
<div class="container-fluid cart-view-order-continer" style="border:solid red; justify-content:space-between;">
    <div class="col col-lg-10 col-lg-10" style="border:solid green;">
        <div class="container-fluid" style="border:solid blue;">
            @foreach(var book in Model.CartItems)
            {
                <div class="row" align="left">
                    <div class="col col-lg-10 col-sm-6 book-description " align="left" style="border:solid orange;">
                        <div class="col col-lg-3 cart-book-cover" style="border:solid red; float: left;">
                            <img class="topten-image" src="@book.Book.Image" alt="">
                        </div>
                        <div class="col col-lg-9 col-sm-5 cart-book-info" style="border:solid green;">
                            <p><strong>Book Title:</strong> @book.Book.Title</p>
                            <p><strong>Book Author:</strong> @book.Book.AuthorId</p>
                            <p><strong>Price:</strong> @book.Book.Price<strong>$</strong></p>
                        </div>
                    </div>
                    <div class="col col-lg-2 col-sm-2 book-quantity" style="border:solid brown;">
                        <p>@book.Count </p>
                        <p></p>
                    </div>
                </div>
            }
           
            <br>
        </div>
        <div class="text-center">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-group text-center">Continue shopping</a>
            <a href="#" class="btn btn-primary btn-group text-center">Proceed to checkout</a>
        </div>

    </div>
    <div class="col col-lg-2 col-sm-2" style="border:solid green;">
        <p>Order total Price</p>
        <p></p>
    </div>
  
</div>