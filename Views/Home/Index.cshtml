}
-->
<h2 class="frontpage-category">PopularBooks</h2>
<div class="container" id="front-page-primary-wrap">
    <div class="row">
        <div class="col col-lg-12 frontpage-booklist">
            @foreach(var books in Model.PopularBooks)
            {
            <div class="col col-lg-2 col-sm-2 book-display-frontpage">
                <div class="row">
                    <div class="col col-lg-12 book-image-div">
                        <a asp-controller="Book" asp-action="Details" asp-route-id="@books.Id">
                        <img class="book-image-frontpage" src="@books.Image" alt="@books.Title">
                        </a>                    
                    </div>
                </div>
                    <div class="book-info-frontpage">
                        <a asp-controller="Book" asp-action="Details" asp-route-id="@books.Id">
                            <h3 id="frontpage-title">@books.Title</h3>
                        </a>
                        <p id="frontpage-author">@books.Author</p>
                        <p id="frontpage-rating">@books.Rating</p>
                        <p id="frontpage-price">@books.Price $</p>
                        <button class="btn btn-primary frontpage-cartbutton">Add to cart</button>
                    </div>
            </div>
            }
        </div>
        <h2 class="frontpage-category">Recently Added</h2>
        <div class="col col-lg-12 frontpage-booklist">
            @foreach(var booksRecentlyAdded in Model.RecentlyAddedBooks)
            {
            <div class="col col-lg-2 book-display-frontpage">
                <div class="row">
                    <div class="col col-lg-12 book-image-div">
                        <a asp-controller="Book" asp-action="Details" asp-route-id="@booksRecentlyAdded.Id">
                            <img class="book-image-frontpage" src="@booksRecentlyAdded.Image" alt="@booksRecentlyAdded.Title">
                        </a>                    
                    </div>
                </div>
                    <div class="book-info-frontpage">
                        <a asp-controller="Book" asp-action="Details" asp-route-id="@booksRecentlyAdded.Id">
                            <h3 id="frontpage-title">@booksRecentlyAdded.Title</h3>
                        </a>
                        <p id="frontpage-author">@booksRecentlyAdded.Author</p>
                        <p id="frontpage-rating">@booksRecentlyAdded.Rating</p>
                        <p id="frontpage-price">@booksRecentlyAdded.Price $</p>
                        <button class="btn btn-primary frontpage-cartbutton">Add to cart</button>
                    </div>
            </div>
            }
        </div>
        <h2 class="frontpage-category">Tvö dóp í poka</h2>
        <div class="col col-lg-12 frontpage-booklist">
            @foreach(var booksRandom in Model.RecentlyAddedBooks)
            {
            <div class="col col-lg-2 book-display-frontpage">
                <div class="row">
                    <div class="col col-lg-12 book-image-div">
                        <a asp-controller="Book" asp-action="Details" asp-route-id="@booksRandom.Id">
                            <img class="book-image-frontpage" src="@booksRandom.Image" alt="@booksRandom.Title">
                        </a>                    
                    </div>
                </div>
                    <div class="book-info-frontpage">
                        <a asp-controller="Book" asp-action="Details" asp-route-id="@booksRandom.Id">
                            <h3 id="frontpage-title">@booksRandom.Title</h3>
                        </a>
                        <p id="frontpage-author">@booksRandom.Author</p>
                        <p id="frontpage-rating">@booksRandom.Rating</p>
                        <p id="frontpage-price">@booksRandom.Price $</p>
                        <button class="btn btn-primary frontpage-cartbutton">Add to cart</button>
                    </div>
            </div>
            }
        </div>
    </div>
</div>