@model BookCave.Models.ViewModels.RegisterViewModel

<h1>Register</h1>

    <form asp-action="Register" asp-controller="Account" class="form" method="POST">
      <div class="form-group">
        <input type="email" asp-for="Email" class="form-control" placeholder="example@example.com">
      </div>
      <div class="form-group">
        <input type="text" asp-for="FirstName" class="form-control" placeholder="John">
      </div>
      <div class="form-group">
        <input type="text" asp-for="LastName" class="form-control" placeholder="Snow">
      </div>
      <div class="form-group">
        <input type="password" asp-for="Password" class="form-control" placeholder="Password123">
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-default" value="Register Me">
      </div>
    </form>
