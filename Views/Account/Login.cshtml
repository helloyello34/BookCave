@model BookCave.Models.ViewModels.LoginViewModel

<h1>Log In</h1>

<form asp-action="Login" asp-controller="Account" class="form-horizontal">

  <div class="form-group">
    <input type="email" asp-for="Email" class="form-control" placeholder="Example@example.com">
  </div>
  <div class="form-group">
    <input type="password" asp-for="Password" class="form-control" placeholder="Password">
  </div>
  <div class="form-group">
    <label>
      <input type="checkbox" asp-for="RememberMe"> Remember me
    </label>
  </div>
  <div class="form-group">
    <input type="submit" class="btn btn-default" value="Login">
  </div>

</form>