@model BookCave.Models.ViewModels.ProfileHomeViewModel;

<div>
  <a asp-action="EditPersonal" class="btn btn-default">Edit Personal Info</a>
</div>

<div>
  <table class="table">
    <tr>
      <th>
        First Name: 
      </th>
      <td>
        @Model.FirstName
      </td>
    </tr>
    <tr>
      <th>
        Last Name: 
      </th>
      <td>
        @Model.LastName
      </td>
    </tr>
    <tr>
      <th>
        Email: 
      </th>
      <td>
        @Model.Email
      </td>
    </tr>
    <tr>
      <th>
        Street Address: 
      </th>
      <td>
        @Model.StreetAddress
      </td>
    </tr>
    <tr>
      <th>
        Post Code: 
      </th>
      <td>
        @Model.ZipCode
      </td>
    </tr>
    <tr>
      <th>
        Town/City: 
      </th>
      <td>
        @Model.City
      </td>
    </tr>
    <tr>
      <th>
        Country: 
      </th>
      <td>
        @Model.Country
      </td>
    </tr>
  </table>
</div>